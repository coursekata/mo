{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    },
    "editor.rulers": [88]
  },
  "python.analysis.diagnosticSeverityOverrides": {
    "reportUnusedImport": "none",
    "reportMissingTypeStubs": "information"
  }
}
